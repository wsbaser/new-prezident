<div id="contentContainer">
  <div id="videoDescription" class="container">
    <div class="row header">
      <span class="name">Нужны ли выборы 2018 года?</span>
      <span class="timetotal">Время просмотра: 18 минут</span>
    </div>
    <div class="row content">
      <div class="summary col-8">
        {{playlist.description}}
      </div>
      <div class="col-4">
      {{#bs-carousel 
        nextControlIcon='fas fa-chevron-circle-right'
        prevControlIcon='fas fa-chevron-circle-left'
        wrap=false
        as |car|}}
        {{#car.slide}}
          <div class="car-item">video range 1</div>
        {{/car.slide}}
        {{#car.slide}}
          <div class="car-item">video range 2</div>
        {{/car.slide}}
      {{/bs-carousel}}

<!--        <div class="links-list">
          См. также:
          {{#link-to "index"}}диктаторские режимы СНГ{{/link-to}},
          {{#link-to "index"}}фальсификация выборов{{/link-to}},
          {{#link-to "index"}}создание "Единой России"{{/link-to}},
          {{#link-to "index"}}контроль над СМИ{{/link-to}},
          {{#link-to "index"}}квасной патриотизм{{/link-to}}
        </div>
        -->
      </div>
    </div>
  </div>
  <div id="containingBlock">
    <div class="videoWrapper">
      <div id="player"></div>
    </div>
  </div>
  <div id="navigation">
    {{#bs-button onClick=(action "nextVideo") type="primary"}}
      ПЕРЕЙТИ К СЛЕДУЮЩЕЙ ТЕМЕ
      <span class="glyphicon glyphicon-play"></span>
    {{/bs-button}}
    <span class="glyphicon glyphicon-play"></span>
  </div>
</div>